#!/usr/bin/env bash 

#=============================================================================
#---------------------------------------------------------- .system.logs.setup
printf "log_dir :: $log_dir \r\n"
printf "log_files :: secure : syslog : messages \r\n"
#-----------------------------------------------------------------------------
#```
log_dir="/var/log"

cd $log_dir && tail -n $1 -f secure -f syslog -f messages | sed --unbuffered \
    -e 's/\(.*kernel.*\)/\o033[33m\1\o033[39m/' \
    -e 's/\(.*system.*\)/\o033[35m\1\o033[39m/' \
    -e 's/\(.*su.*\)/\o033[36m\1\o033[39m/' \
    -e 's/\(.*login.*\)/\o033[36m\1\o033[39m/' \
    -e 's/\(.*polkit.*\)/\o033[36m\1\o033[39m/' \
    -e 's/\(.*error.*\)/\o033[31m\1\o033[39m/' \
    -e 's/\(.*warn.*\)/\o033[34m\1\o033[39m/' \
    -e 's/\(.*==> secure <==.*\)/\o033[31m\1\o033[39m/' \
    -e 's/\(.*==> syslog <==.*\)/\o033[31m\1\o033[39m/' \
    -e 's/\(.*==> messages <==.*\)/\o033[31m\1\o033[39m/' \
#```
#----------------------------------------------------------------------------
printf "lease set number of strings tailed \n"
#====================================================== .system.logs.setup.end